<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="si.komp.quadcontroller.ControllActivity$PlaceholderFragment" >

    <SeekBar
        android:id="@+id/seekBar01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar01"
        android:layout_below="@+id/seekBar01"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SeekBar02"
        android:layout_below="@+id/SeekBar02"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SeekBar03"
        android:layout_below="@+id/SeekBar03"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SeekBar04"
        android:layout_below="@+id/SeekBar04"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SeekBar05"
        android:layout_below="@+id/SeekBar05"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SeekBar07"
        android:layout_below="@+id/SeekBar07"
        android:progress="50" />

    <SeekBar
        android:id="@+id/SeekBar07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SeekBar06"
        android:progress="50" />

</RelativeLayout>
